<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <PreferenceCategory
        android:title="Filters">

        <CheckBoxPreference
            android:summary="Show my flags"
            android:defaultValue="true"
            android:key="meFilter"
            />
        <CheckBoxPreference
            android:summary="Show my friends' flags"
            android:defaultValue="true"
            android:key="flFilter"
            />
        <CheckBoxPreference
            android:summary="Show flags from people I don't know"
            android:defaultValue="true"
            android:key="strangersFilter"
            />
        <CheckBoxPreference
            android:summary="Assign higher relevance to older flags"
            android:defaultValue="false"
            android:key="timeFilter"
            />
        <SeekBarPreference
            android:title="Range of action"
            android:max="4"
            android:defaultValue="1"
            android:progress="1"
            android:key="seekBar"
            />
        <SeekBarPreference
            android:title="Max number of visible flags"
            android:max="4"
            android:defaultValue="1"
            android:progress="1"
            android:key="maxFetch"
            />
        <Preference
            android:key="version"
            android:title="Places Version" />

    </PreferenceCategory>

</PreferenceScreen>