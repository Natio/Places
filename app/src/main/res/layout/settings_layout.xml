<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <PreferenceCategory
        android:title="Filters">

        <CheckBoxPreference
            android:title="Lone Wolf"
            android:summary="Enable to see flags placed by yourself"
            android:key="loneWolfFilter"
            />
        <CheckBoxPreference
            android:title="With Friends Surrounded"
            android:summary="Enable to see flags placed by your friends"
            android:key="flFilter"
            />
        <CheckBoxPreference
            android:title="Storytellers In The Dark"
            android:summary="Enable to see flags placed by strangers"
            android:key="strangersFilter"
            />
        <CheckBoxPreference
            android:title="Archaeologist"
            android:summary="Enable to give higher relevance to older flags"
            android:key="timeFilter"
            />

    </PreferenceCategory>

</PreferenceScreen>