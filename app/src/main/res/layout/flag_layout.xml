<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    android:weightSum="1">
<!-- general layout changed from relative to linear to manage weights-->

    <RelativeLayout
        android:id="@+id/flag_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/white">

        <!--title bar-->
        <RelativeLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/author_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:cropToPadding="false" />

                <!--
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/my_border_2"
                     -->


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/flagInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/profile_pic"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/dateInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <!-- add another text view for the rest-->
                </LinearLayout>



                <!-- <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/grey"
                    android:layout_toLeftOf="@+id/profile_pic"
                    android:id="@+id/profile_pic_divider" /> -->


            </LinearLayout>

            <TextView
                android:id="@+id/temperature"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"

                android:layout_marginRight="62dp"
                android:layout_marginEnd="62dp"

                android:layout_height="wrap_content"
                android:textSize="16sp"

                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/meteo"
                android:layout_toStartOf="@+id/meteo"
                android:layout_centerVertical="true"

                />

            <ImageView
                android:id="@+id/meteo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:cropToPadding="false"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end" />



            </RelativeLayout>

        <!-- divider-->
        <View
            android:id="@+id/author_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/titleBar"
            android:background="@color/grey"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>

        <!--content -->
        <ScrollView
            android:id="@+id/FlagContent"
            android:layout_below="@id/author_divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Flag's text-->
                <TextView
                    android:id="@+id/text"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:ems="@integer/max_text_size"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="16sp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/black" />

                <!-- Media Container-->
                <LinearLayout
                    android:id="@+id/media_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical|center_horizontal">

                    <!-- linear layout for picture border-->
                    <LinearLayout
                        android:id="@+id/imageContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@color/black"
                        android:visibility="gone">
                            <ImageView
                                android:id="@+id/pic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:background="@drawable/my_border"
                                android:maxHeight="270dp"
                                android:maxWidth="270dp"/>
                        </LinearLayout>

                    <!-- linear layout for managing player -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/audioContainer"
                        android:gravity="center_horizontal|center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/audio"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/play_button"
                            android:layout_gravity="center_horizontal|center_vertical"/>
                    </LinearLayout>

                    <!-- layout for managing player -->
                    <FrameLayout
                        android:id="@+id/video_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:visibility="gone">

                    <!-- hard-coded dimensions, must be changed -->
                        <VideoView
                            android:id="@+id/vid"
                            android:layout_width="wrap_content"
                            android:layout_height="230dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            />

                        <ImageButton
                            android:id="@+id/play_video_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:src="@drawable/play_video_button"/>

                </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stats"
        android:layout_below="@id/FlagContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="2dp"
        android:background="@color/light_grey">

        <Button
            android:id="@+id/wow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/my_border_2"
            android:text="@string/wow"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/add_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wow_button"
            android:layout_toEndOf="@+id/wow_button"
            android:layout_gravity="center"
            android:background="@drawable/my_border_2"
            android:text="@string/comment"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"/>

        <ImageView
            android:id="@+id/categoryIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/add_comment"
            android:layout_toRightOf="@id/add_comment"
            android:background="@drawable/my_border_2"/>
        <!--android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"-->

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_grey">

        <android.support.v4.widget.SwipeRefreshLayout xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/comments_holder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:visibility="visible"
            tools:context="com.gcw.sapienza.places.activities.MainActivity">

            <ListView
               android:id="@+id/comments_list"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content" />

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>


    <!--  Big preview of media  -->
    <RelativeLayout
        android:id="@+id/frame_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent_green"
        android:clickable="true"
        android:visibility="gone"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/focused_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="@drawable/my_border"
            android:maxHeight="390dp"
            android:maxWidth="390dp" />

    </RelativeLayout>

    <!-- unused buttons -->

    <Button
        android:id="@+id/lol_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:background="@drawable/my_border_3"
        android:text="LOL"
        android:textSize="14sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/boo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/boo_button"
        android:background="@drawable/my_border_3"
        android:text="BOO"
        android:textSize="14sp"
        android:visibility="gone" />
    <!-- end Of unused -->

    <!--
        <Button
            android:id="@+id/comments_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wow_button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/my_border_3"
            android:text="comments"
            android:textSize="16sp"
            android:visibility="gone" />
-->

</LinearLayout>