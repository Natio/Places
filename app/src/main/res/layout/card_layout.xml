<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:gravity="center_horizontal"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:id="@+id/contents_container"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:gravity="clip_horizontal|center_horizontal">

        <RelativeLayout
            android:id="@+id/flagTitle"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_height="35dp"

            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/card_profile_pic"
                android:layout_width="31dp"
                android:layout_height="31dp"
            />

            <TextView
                android:id="@+id/card_textView_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/card_profile_pic"
                android:layout_toEndOf="@id/card_profile_pic"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:minLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                />
            <!--
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            -->

            <ImageView
                android:id="@+id/categoryIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
            />

            <!--
            android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"

            -->

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stats_container"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stats_wows"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"/>

            <View
                android:id="@+id/divider_vertical"
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:background="@color/grey"
                android:layout_marginTop="1dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stats_comments"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="14sp"/>



        </RelativeLayout>

